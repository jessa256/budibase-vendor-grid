{
  "name": "wedding-vendor-grid",
  "version": "1.0.0",
  "description": "A responsive wedding vendor management grid component for Budibase with Supabase integration",
  "main": "dist/plugin.min.js",
  "module": "dist/plugin.min.js",
  "svelte": "src/index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "package": "budi plugins --build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.svelte",
    "lint:fix": "eslint src --ext .js,.svelte --fix",
    "format": "prettier --write \"src/**/*.{js,svelte,json,md}\"",
    "clean": "rm -rf dist && rm -rf *.tar.gz"
  },
  "keywords": [
    "budibase",
    "plugin",
    "component",
    "wedding",
    "vendor",
    "management",
    "grid",
    "svelte",
    "supabase",
    "responsive",
    "accessible"
  ],
  "author": {
    "name": "Jessica Clark",
    "email": "jessica@example.com",
    "url": "https://github.com/jessa256"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jessa256/budibase-vendor-grid.git"
  },
  "bugs": {
    "url": "https://github.com/jessa256/budibase-vendor-grid/issues"
  },
  "homepage": "https://github.com/jessa256/budibase-vendor-grid#readme",
  "files": [
    "dist/",
    "src/",
    "schema.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/svelte": "^4.2.3",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "rollup": "^4.13.0",
    "rollup-plugin-svelte": "^7.1.6",
    "svelte": "^4.2.12",
    "svelte-jester": "^3.0.0"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.svelte$": "svelte-jester",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,svelte}",
      "!src/**/*.test.{js,svelte}",
      "!src/**/*.spec.{js,svelte}"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "svelte"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte/svelte"
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  }
}